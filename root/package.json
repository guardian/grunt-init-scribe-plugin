{
    "name": "{%= name %}",
    "description": "{%= description %}",
    "version": "{%= version %}",
    "homepage": "{%= homepage %}",
    "author": {
        "name": "{%= author_name %}",
        "email": "{%= author_email %}"
    },
    "repository": {
        "type": "git",
        "url": "{%= homepage %}"
    },
    "bugs": {
        "url": "{%= bugs %}"
    },
    "licenses": [
        {
            "type": "Apache2",
            "url": "http://www.apache.org/licenses/LICENSE-2.0"
        }
    ],
    "main": "{%= main %}",
    "engines": {
        "node": "{%= node_version %}"
    },
    "scripts": {
        "test-firefox": "TEST_SERVER_PORT=9090 BROWSER_NAME='firefox' ./run-tests.sh",
        "test-chrome": "TEST_SERVER_PORT=9090 BROWSER_NAME='chrome' ./run-tests.sh",
        "test": "npm run test-chrome",
        "postinstall": "bower install",
        "build": "browserify --standalone {%= name %} > ./build/{%= name %}.js",
        "build-prod": "npm run build && uglifyjs ./build/{%= name %}.js > ./build/{%= name %}.min.js",
        "watch": "watchify -o ./build/{%= name %}.js"
    },
    "browserify": { "transform": "babelify" },
    "devDependencies": {
        "babel": "^4.4.5",
        "babelify": "^5.0.3",
        "bower": "^1.3.12",
        "browserify": "^9.0.3",
        "chai": "1.9.1",
        "glob": "^4.1.5",
        "http-server": "^0.7.1",
        "lodash": "^2.4.1",
        "mocha": "^2.0.1",
        "scribe-test-harness": "^0.0.6",
        "selenium-webdriver": "^2.44.0",
        "webdriver-manager": "^1.0.1",
        "uglify-js": "^2.4.16",
        "mversion": "^1.3.0"
    },
    "keywords": []
}
